
@keyframes animatedBackgroundLtr {
    from {
        background-position: 0 0;
    }

    to {
        background-position: 100% 0;
    }
}

@keyframes animatedBackgroundFromTop {
    from {
        background-position: 0 100%;
    }

    to {
        background-position: 0 0;
    }
}

.clouds_bg {
    width: 100%;
    height: 100%;
    
    background-image: url(../../../assets/images/cloud_bg.png);
    background-position: 0px 0px;
    background-repeat: repeat-x;
    animation: animatedBackgroundLtr 60s linear infinite;
    position: absolute;
    z-index: -1;
}



.main_container {
    width: 100%;
    height: 100%;

    background-size: cover;
    background-color: transparent;
    background-image: url(../../../assets/images/gift_bg.png);
    animation: animatedBackgroundFromTop 60s linear infinite;

    text-align: center;
    position: absolute;
    z-index: 0;
}

.header {
    text-align: center;
    padding-top: 30%;
    position: fixed;
    z-index: 10;
}
