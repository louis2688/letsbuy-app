.main_container {
    background-color: white;
    background-image: url("../../../assets/images/BGopening.png");
    background-size: cover;
    width: 100%;
    height: 100%;
}

.header {
    text-align: center;
    padding: 6% 0px 5% 0px;
}

    .header > img {
        max-width: 22%;
    }

.text_container {
    text-align: center;
    color: lightgray;
    font-size: 4vmin;
    margin: 15px;
}

.form {
    width: 75%;
    margin: 5% auto;
}

    .form > div {
        font-size: 4vmin;
        margin-top: 2%;
        color: #82838a;
    }

.btn_container {
    width: 65%;
    margin: auto;
    text-align: center;
}

    .btn_container > div > span {
        margin: auto;
        font-size: 4vmin;
    }

input,
input::-webkit-input-placeholder {
    font-size: 4.5vmin;
}

input {
    color: black;
    width: 100%;
    margin: 10px auto;
    background-color: transparent;
    border: 0px;
    border-bottom: 2px solid lightgray;
}

.btn_container > div {
    margin: 15px auto;
    color: white;
    width: 90%;
    height: 40px;
    padding-top:9px;
}

#logIn {
    background: linear-gradient(to bottom, #9a18ff, #8418af);
    text-align: center;
    border-radius: 30px;
}

#new {
    background-image: url("../../../assets/images/new_btn.png");
    background-size: contain;
    background-repeat:no-repeat;
    background-position: center;
}

#forgot {
    text-align: right;
    margin-bottom: 5%;
}

    #forgot > span {
        font-size: 4vmin;
        vertical-align: middle;
        border-bottom: 2px solid #82838a;
    }

.footer {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 8%;
    background: linear-gradient(to bottom, #21242b, #0e0f12);
}

.footer_text {
    float: left;
    color: white;
    font-size: 3.5vmin;
    margin: 20px 0 0 10%;
}

.footer_btn {
    margin: 10px 10px;
    float: right;
    border-radius: 30px;
    width: 15%;
    height: 60%;
}
.footer_btn > div {
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
    overflow:hidden;
}
.footer_btn_container {
    margin-right: 12.5%;
    height: 100%;
}

.footer_facebook {
    background-image: url("../../../assets/images/facebook_btn.png");
    height: 75%;
    width:100%;
    margin-top:15%;
}

.footer_gmail {
    background-image: url("../../../assets/images/gmail_btn.png");
    height: 75%;
    width: 100%;
    margin-top: 15%;
}
.footer_gmail_container {
    background-color: #d84532;
}
.footer_facebook_container {
    background-color: #447ad6;
}

